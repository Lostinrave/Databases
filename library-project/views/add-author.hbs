<div class="flex justify-center h-screen">
    <div class="m-auto">
        <form action="/add-author" method="POST" class="w-full max-w-lg">
            <div class="flex flex-wrap -mx-5 mb-3 justify-center">
                <div class="w-full  px-3 mb-6 md:mb-0">
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mt-2 mb-2" for="grid-city">
                        Name
                    </label>
                    <input name="name" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-city" type="text" placeholder="Author name">
                </div>
                 <div class="w-full  px-3 mb-6 md:mb-0">
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2 mt-2" for="grid-city">
                        Surname
                    </label>
                    <input name="surname" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-city" type="text" placeholder="Author surname">
                </div>
                <div class="w-full px-3 mb-6 md:mb-0 ">
                    <button type="submit" class=" max-w-fullbg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow mt-2">
                    Submit
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>