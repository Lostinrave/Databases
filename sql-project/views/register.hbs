<main class="container">
    <div class="row justify-content-center">
        {{#if messages}}
        <div class="alert alert-{{status}}">{{messages}}</div>
        {{/if}}
        <div class="col-md-6 ">
            <div class="text-center">
               <form class="form-signin" method="POST" action='/register'>
                    <img class="mb-4 img-fluid" src="https://cdn-icons-png.flaticon.com/512/2921/2921087.png" alt="" width="72" height="57">
                    <h1 class="h3 mb-3 fw-normal">Registration</h1>
                    <div class="form-floating mb-1">
                        <input type="text" name="name" class="form-control" id="floatingInput" placeholder="name">
                        <label for="floatingInput">Name</label>
                    </div>
                    <div class="form-floating mb-1">
                        <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                    </div>
                    <button class="btn btn-lg btn-primary mt-3" type="submit">Register</button>
                </form>
            </div>
        </div>
    </div>
</main>

