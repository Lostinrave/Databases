

<main class="container">
    <div class="row">
        {{#if messages}}
        <div class="alert alert-{{status}}">{{messages}}</div>
        {{/if}}
        <div class="col-md-12">
            <div class="card">
                <div class="card-body bg-dark text-light">
                    <h5 class="card-title ">Companies list</h5>
                    <table class="table text-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th></th>
                        </tr>
                        {{#each companies}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{address}}</td>
                            <td>
                                <a href="/edit-company/{{id}}" class="btn btn-success">Edit</a>
                                <a href="/delete-company/{{id}}" class="btn btn-danger">Delete</a>
                                
                            </td>

                        </tr>
                        {{/each}}

                    </table>
                </div>
            </div>
            {{>pagination}}
        </div>
    </div>
</main>
