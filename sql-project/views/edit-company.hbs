<main class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body bg-dark text-light">
                    <h5 class="card-title">Add new company</h5>
                    <form method="POST" action="/edit-company">
                        {{#each edit}}
                        <input type="hidden" name="id" value="{{this.id}}">
                        <div class="mb-3">
                            <label class="form-label">Company name</label>
                            <input type="text" name="name" value="{{this.name}}" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Company adress</label>
                            <input type="text" name="address" value="{{this.address}}"class="form-control">
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary" type="submit">Edit</button>
                        </div>
                        {{/each}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
