

<main class="container">
    <div class="row">
        {{#if messages}}
        <div class="alert alert-{{status}}">{{messages}}</div>
        {{/if}}
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Customers list</h5>
                    <table class="table">
                        <tr>
                            <th>Photo</th>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Comment</th>
                            <th>Company id</th>
                        </tr>
                        {{#each customers}}
                        <tr>
                            <td>
                                {{#if photo}}
                                <img width="50" src="/uploads/{{photo}}">
                                {{/if}}
                            </td>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{surname}}</td>
                            <td>{{phone}}</td>
                            <td>{{email}}</td>
                            <td>{{{comment}}}</td>
                            <td>{{company_id}}</td>
                            <td>
                                <a href="/edit-customer/{{id}}" class="btn btn-success">Edit</a>
                                <a href="/delete-customer/{{id}}" class="btn btn-danger">Delete</a>
                                
                            </td>

                        </tr>
                        {{/each}}

                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
