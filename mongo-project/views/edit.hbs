<form action="/records/edit_submit" method="POST">
    <input type="hidden" name="id" value="{{edit._id}}"
    <p><label>Name</label>
    <input type="text" name="name" value="{{edit.name}}"/> </p>
    <p><label>Text</label>
    <textarea type="text" name="text">{{edit.text}}</textarea></p>
    <p><label>Date</label>
    <input type="date" name="date" value="{{edit.date}}"/> </p>
    <p><input type="submit" value="submit" ></p>
</form>