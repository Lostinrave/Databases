<div class="flex items-center justify-center min-h-screen">
	<div class="col-span-12">
        <form action="/records/edit_submit" method="POST">
             <input type="hidden" name="id" value="{{edit._id}}">
            <p><label class="block text-gray-400" >Name</label>
            <input class="mt-1 block w-full bg-gray-800 border-radius shadow-lg" type="text" name="name"value="{{edit.name}}"/> </p>
            <p><label class="block text-gray-400">Text</label>
            <textarea class="mt-1 block w-full bg-gray-800 border-radius shadow-lg" type="text" name="text">{{edit.text}}</textarea></p>
            <p><label class="block text-gray-400">Date</label>
            <input class="mt-1 block w-full bg-gray-800 border-radius shadow-lg" type="date" name="date" value="{{edit.date}}"/> </p>
            <p><input class="mt-1 block w-full bg-gray-800 border-radius shadow-lg" type="submit" value="submit"></p>
        </form>
    </div>
</div>