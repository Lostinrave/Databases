
<h1>Records list</h1>
<table class="table-auto">
    <tr>
        <th>Name</th>
        <th>Text</th>
        <th>Date</th>
        <th>Edit</th>
    </tr>
    {{#each data}}
    <tr>
        <td>{{this.name}}</td>
        <td>{{this.text}}</td>
        <td>{{this.date}}</td>
        <td><a href="records/edit/{{_id}}">Edit</a></td>
    </tr>
    {{~/each}}
</table>